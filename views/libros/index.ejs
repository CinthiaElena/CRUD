   <%- include ("../layouts/cabecera.ejs") %>  
        <br/>
        <br/>
        
        <a href="/libros/crear" class="btn btn-light" type="button" style="font-family: 'Quicksand', sans-serif;">Añadir libro</a>

        <br/>
        <br/>
        <table class="table" style="background-color:rgb(0,0,0);">
            <thead class="" style="background-color:rgb(226, 226, 226); color:black;">
                <tr style="font-family: 'Quicksand', sans-serif;">
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Autor</th>
                    <th>Año</th>
                    <th>Páginas</th>
                    <th>Categoria</th>
                    <th style=" width: max-content; "scope="col">Sinopsis</th>
                    <th>Imagen</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody style="color:aliceblue;">
                <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                
                <tr>
                    <td> <%=libros[libro].id  %>  </td>

                    <td> <%=libros[libro].nombre  %>  </td>

                    <td> <%=libros[libro].autor  %>  </td>

                    <td> <%=libros[libro].fecha  %>  </td>

                    <td> <%=libros[libro].paginas  %>  </td>

                    <td> <%=libros[libro].categoria  %>  </td>

                    <td width="150"> <%=libros[libro].sinopsis  %>  </td>

                    <td>
                        <img class="img-thumbnail" width="100" src="images/<%=libros[libro].imagen  %>" alt="">
                    </td>

                    <td>
                        
                        <div class="<div class="btn-group" role="group" aria-label="button group">
                            
                            <form class="form-inline" method="post" action="/libros/editar/<%=libros[libro].id  %>">
                                <button class="btn btn-light" type="submit" style="font-family:'Quicksand', sans-serif;">Editar</button>
                            </form>

                        </div>
                    </br>
                        <div class="<div class="btn-group" role="group" aria-label="button group">
                            
                            <form class="form-inline" method="post" action="/libros/eliminar/<%=libros[libro].id  %>">
                                <button class="btn btn-light" type="submit" style="font-family:'Quicksand', sans-serif;">Borrar</button>
                            </form>

                        </div>
                 
                     </td>
                </tr>
    
                <% } %>
    
            </tbody>
        </table>   


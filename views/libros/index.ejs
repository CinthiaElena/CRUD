   <%- include ("../layouts/cabecera.ejs") %>  
        <br/>
        <br/>
        
        <a href="/libros/crear" class="btn btn-primary" type="button">Añadir libro</a>

        <br/>
        <br/>
        <table class="table table-light">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Autor</th>
                    <th>Año</th>
                    <th>Páginas</th>
                    <th>Categoria</th>
                    <th>Sinopsis</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% for( let libro = 0; libro < libros.length; libro++ ) { %>
                
                <tr>
                    <td> <%=libros[libro].id  %>  </td>

                    <td> <%=libros[libro].nombre  %>  </td>

                    <td> <%=libros[libro].autor  %>  </td>

                    <td> <%=libros[libro].fecha  %>  </td>

                    <td> <%=libros[libro].paginas  %>  </td>

                    <td> <%=libros[libro].categoria  %>  </td>

                    <td width="150"> <%=libros[libro].sinopsis  %>  </td>

                    <td>
                        <img class="img-thumbnail" width="100" src="images/<%=libros[libro].imagen  %>" alt="">
                    </td>

                    <td>
                        
                        <div class="<div class="btn-group" role="group" aria-label="button group">
                            
                            <form class="form-inline" method="post" action="/libros/editar/<%=libros[libro].id  %>">
                                <button class="btn btn-warning" type="submit">Editar</button>
                            </form>

                        </div>
                    </br>
                        <div class="<div class="btn-group" role="group" aria-label="button group">
                            
                            <form class="form-inline" method="post" action="/libros/eliminar/<%=libros[libro].id  %>">
                                <button class="btn btn-danger" type="submit">Borrar</button>
                            </form>

                        </div>
                 
                     </td>
                </tr>
    
                <% } %>
    
            </tbody>
        </table>   

<%- include ("../layouts/pie.ejs") %>  